<body>
  <div class="container">
    <h2>114年期初工作坊 青年查詢系統</h2>
    <p>請輸入「入選年度+身分證字號」（例如：112A123456789）</p>
    <input type="text" id="uid" placeholder="請輸入查詢代碼" />
    <input type="button" value="查詢" onclick="query()" />
    <div id="result"></div>
  </div>

  <script>
    function query() {
      const uid = document.getElementById("uid").value.trim();
      if (!uid) {
        alert("請輸入查詢代碼");
        return;
      }

      const resultDiv = document.getElementById("result");
      resultDiv.innerHTML = "查詢中，請稍候...";

      fetch("YOUR_WEBHOOK_URL_HERE", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ uid: uid })
      })
        .then(response => response.json())
        .then(data => {
          if (data.error) {
            resultDiv.innerHTML = `<span style="color:red;">${data.error}</span>`;
          } else {
            resultDiv.innerHTML = `
              <b>查詢結果：</b><br>
              姓名：${data.name}<br>
              年度：${data.year}<br>
              類別：${data.type}<br>
              <pre>委員建議：\n${data.suggestion}</pre>
            `;
          }
        })
        .catch(err => {
          resultDiv.innerHTML = "查詢失敗，請稍後再試。";
          console.error(err);
        });
    }
  </script>
</body>
</html>
